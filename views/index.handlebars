<div class="container">

    <div class="burger_area">
        <h1>Eat da Burger!</h1>
        <p>Add a burger and devour it!</p>
        <br>
        <h2>Make a Burger</h2>
        <panel>
            <form class="create-form">
                <div class="form-group">
                    <label for="newburger">New Burger:</label>
                    <input type="text" id="newburger" name="burger">
                  
                    <button type="submit" id="addburger">Add Burger</button>
                </div>
            </form>
        </panel>
    </div>

    <div>
        <!-- Undevoured Burgers -->
        <div>
            <div>
                <div><strong>New Burgers</strong></div>
                <div>
                    <ul>
                        {{#each burgers}}
                            {{#unless devoured}}
                                <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                                <button type="button" class="eatburger" id ="eatbutton" data-id="{{this.id}}" data-newDevoured="{{devour}}">EAT IT</button>
                                <hr>
                            {{/unless}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
        <!-- Devoured Burgers -->
        <div>
            <div>
                <div><strong>Devoured Burgers</strong></div>
                <div>
                    <ul>
                        {{#each burgers}}
                            {{#if devoured}}
                                <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                                <button type="button" class="removeBurger" id ="trashbutton" data-id="{{this.id}}" data-newDevoured="{{devour}}">Remove Burger</button>
                                <hr>
                            {{/if}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>

</div>
